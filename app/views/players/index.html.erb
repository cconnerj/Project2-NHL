<h1>Players</h1>

<% if @team%>

<p>Click player name to add to team</p>


  <% @players.each do |player| %>
    <li>
      <%= link_to player.name, add_membership_team_player_path(@team, player), method: :post %>
    </li>

    <% end %>
<% else %>
<div class = "createplayer">
<h2><%= link_to "Create a Player", new_player_path %></h2>
</div>


  <% @players.each do |player| %>
    <li>
      <%= link_to "#{player.name}", player_path(player) %>
    </li>


<% end %>
<% end %>
