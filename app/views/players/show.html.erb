<% if @team then %>
  <div class="playershow">
    <p><%= image_tag @player.img_url %></p>
    <h1><%= @player.name %></h1>
    <% if @playerid > 25 then %>
    <h3><%= link_to "Edit player", edit_player_path %></h3>
    <%else %>
  <% end %>
  <p>Age:
    <%= @player.age %></p>
  <p>Position:
    <%= @player.position %></p>


<h3><%= link_to "Remove player from team", remove_membership_team_player_path(@team, @player), method: :delete%></h3>
</div>
<%else%>
<div class="playershow">
<p><%= image_tag @player.img_url %></p>
<h1><%= @player.name %></h1>
<% if @playerid > 25 then %>
<h3><%= link_to "Edit player", edit_player_path %></h3>
<%else %>
<%end%>


  <p>Age:
    <%= @player.age %></p>
  <p>Position:
    <%= @player.position %></p>

</div>
<% end %>
