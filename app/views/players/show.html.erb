<% if @team then %>
<p><%= image_tag @player.img_url %></p>
<h1><%= @player.name %></h1>
<% if @playerid > 25 then %>
<h3><%= link_to "Edit player", edit_player_path %></h3>
<%else %>
<% end %>

<ul>
  <li>Age:
    <%= @player.age %></li>
  <li>Position:
    <%= @player.position %></li>
</ul>
<% if @player.team_ids = true then%>
<h3><%= link_to "Remove player from team", remove_membership_team_player_path(@team, @player), method: :delete%></h3>
<%else %>
<h3>
  <%= link_to "add player to team", add_membership_team_player_path(@team, @player), method: :post %></h3>
<%end %>
<%else%>

<p><%= image_tag @player.img_url %></p>
<h1><%= @player.name %></h1>
<% if @playerid > 25 then %>
<h3><%= link_to "Edit player", edit_player_path %></h3>
<%else %>
<%end%>

<ul>
  <li>Age:
    <%= @player.age %></li>
  <li>Position:
    <%= @player.position %></li>
</ul>
<% end %>
